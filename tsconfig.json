{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "types": ["node", "jest"],
    "lib": ["ES2022"],
    "outDir": "build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",

  },
  "include": ["src", "lib"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],

}
